<section id="videos">
{{#if kids}}
	<h1> HEY KID, ARE YOU READY FOR SOME FUN??</h1>
{{else}}
	<h1> HELLO BUDDY, NICE TO SEE YOU!</h1>
{{/if}}

<div class="container">
	<div id="filter-div" class="row">
		<div class="col-6">
			<h5>Filtering Content by: ${actual_genre}</h5>
		</div>
		<genre-select :genres='genres' @filter='reloadMovies'></genre-select>
	</div>
	
	<div id="content-div" class="container">
		<div class="thumbnail" v-for="movie in movies">
			<a @click="setMovie" :href="movie.id" data-target="slide-out" class="sidenav-trigger"><img :src="/images/ + movie.thumbnail"></a>
			<h5>${movie.name}</h5> 
		</div>
	</div>

	<!--a href="{{../hostname}}/videos/kids/{{id}}"><img src="/images/kids/{{thumbnail}}"> </a>-->
	<!--a href="{{../hostname}}/videos/general/{{id}}"><img src="/images/{{thumbnail}}"></a>-->

	<!--aside-->
	<ul id="slide-out" class="sidenav">
    <li>
		<div id="side_title">
			<h4>${actual_movie.name}</h4>
			<video :src="/videos/ + actual_movie.video" controls width="320" height="240">
			</video>
		</div>
	</li>
	<li>
		<div id="side_rating">
			<h4>Rating</h4>
			<div class="stars_container">
			<label v-for="n in actual_movie.stars_review">â˜…</label>
			</div>
		</div>
		<div id="side_social">
			<h4>Share</h4>
			<div class="container">
				<a href="http://www.facebook.com/"><img class="z-depth-2 tooltipped" data-position="top" data-tooltip="Share on Facebook!" src="/images/facebook.svg"></a>
				<a href="http://www.twitter.com/"><img class="z-depth-2 tooltipped" data-position="top" data-tooltip="Share on Twitter!" src="/images/twitter.svg"></a>
				<a href="http://www.instagram.com/"><img class="z-depth-2 tooltipped" data-position="top" data-tooltip="Share on Instagram!" src="/images/instagram.svg"></a>
			</div>
		</div>
	</li>
	<li>
		<a class="waves-effect waves-light btn" :href="/videos/ + dir + '/' + actual_movie.id"><i class="material-icons right">arrow_forward</i>Go to details</a>
	</li>
  	</ul>
  	<!--a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>-->
      
</div>
</section>